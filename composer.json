{
    "name": "pedrotroller/php-cs-custom-fixer",
    "description": "PHP-CS-FIXER : my custom fixers",
    "license": "MIT",
    "require": {
        "php": ">=7.2",
        "friendsofphp/php-cs-fixer": "^2.16.1"
    },
    "require-dev": {
        "phpspec/phpspec": "^6.1",
        "rector/rector": "^0.7.1",
        "twig/twig": "^2.11.3",
        "webmozart/assert": "^1.3.0"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "PedroTroller\\CS\\Fixer\\": "src/PedroTroller/CS/Fixer"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "spec\\": "spec",
            "tests\\": "tests"
        }
    },
    "archive": {
        "exclude": [
            ".circleci",
            ".dependabot",
            "bin",
            "doc",
            "spec",
            "tests",
            ".gitignore",
            ".php_cs.dist",
            ".releaserc",
            "README.md",
            "package-lock.json",
            "package.json",
            "rector.yaml"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "lint": [
            "@rector",
            "@php-cs-fixer"
        ],
        "php-cs-fixer": [
            "php-cs-fixer fix --dry-run -vvv --diff"
        ],
        "rector": [
            "rector process src/ tests/ spec/"
        ],
        "tests": [
            "tests\\Runner::run",
            "tests\\Orchestra::run",
            "phpspec run -fpretty"
        ]
    }
}
